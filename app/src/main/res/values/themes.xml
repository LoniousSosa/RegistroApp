<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RegistroApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="ButtonOne" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/beige</item>
        <item name="android:backgroundTint">@color/sea_blue</item>
    </style>

    <style name="ButtonTwo" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_dos</item>
        <item name="android:textColor">@color/beige</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="InputEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:backgroundTint">@color/sky_blue</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>