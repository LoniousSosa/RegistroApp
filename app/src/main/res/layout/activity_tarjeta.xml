<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TarjetaActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="@string/tarjeta"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tarjetaImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tarjeta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.579"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/tarjetaImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/nextButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        style="@style/ButtonOne"
        android:text="@string/siguiente"
        android:layout_marginVertical="30dp"
        android:padding="0px"
        android:layout_gravity="center"
        />

    <Button
        app:layout_constraintTop_toBottomOf="@id/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/nextButtonRegister"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        style="@style/ButtonOne"
        android:text="Registro, esto  deberia ser automatico"
        android:layout_marginVertical="30dp"
        android:padding="0px"
        android:layout_gravity="center"
        />
    <Button
        app:layout_constraintTop_toBottomOf="@id/nextButtonRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/botonAdmin"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        style="@style/ButtonOne"
        android:text="Perfil admin, esto con la db no deberia existir"
        android:layout_marginVertical="30dp"
        android:padding="0px"
        android:layout_gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>