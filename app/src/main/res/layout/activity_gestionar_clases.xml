<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestionarClases">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/sky_blue"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/menuBanner"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="25dp"
            android:background="@color/sky_blue"
            android:src="@drawable/menu" />

        <TextView
            android:layout_width="187dp"
            android:layout_height="52dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:background="@color/sky_blue"
            android:text="@string/nombre_instituto"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/profileBanner"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/perfil1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="124dp"
        android:orientation="vertical"
        android:paddingTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <TextView
            android:id="@+id/TextClassName"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:text="@string/nombre_clase"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ButtonClass"
            android:layout_width="357dp"
            android:layout_height="58dp"
            android:layout_gravity="left"
            android:backgroundTint="@color/sky_blue"
            android:text="@string/nombre_de_ejemplo"
            android:textSize="17sp" />
    </LinearLayout>

    <View
        android:elevation="2dp"
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:orientation="vertical"
        android:paddingTop="18dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="150dp">

        <TextView
            android:id="@+id/TextAula"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:text="@string/aula"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ButtonAula"
            android:layout_width="364dp"
            android:layout_height="61dp"
            android:layout_gravity="left"
            android:backgroundTint="@color/sky_blue"
            android:text="@string/nombre_de_ejemplo"
            android:textSize="17sp" />
    </LinearLayout>

    <Button
        android:id="@+id/ButtonNext"
        android:layout_width="149dp"
        android:layout_height="62dp"
        android:layout_gravity="right"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/sea_blue"
        android:padding="10dp"
        android:text="@string/siguiente"
        android:textColor="@color/beige"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>